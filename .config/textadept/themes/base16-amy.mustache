view.indic_fore[textadept.snippets.INDIC_PLACEHOLDER] = colors.base05
view.indic_fore[textadept.run.INDIC_WARNING] = colors.base07
view.indic_fore[textadept.run.INDIC_ERROR] = colors.base08
