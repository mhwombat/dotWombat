# base16-foot
# Scheme name: {{system}} / {{name}}
# Scheme author: {{author}}
# include in foot.ini like so:
# include=~/.config/foot/colours.ini
# must be included under [main], or untitled section at beginning of file
[colors]
# alpha=1.0
# alpha-mode=default # Can be `default`, `matching` or `all`
foreground={{color.text.default.foreground}}
background={{color.text.default.background}}
# flash=7f7f00
# flash-alpha=0.5

# cursor=<inverse foreground/background>

## Normal/regular colors (color palette 0-7)
regular0={{color.terminal.regular0}} # black
regular1={{color.terminal.regular1}} # red
regular2={{color.terminal.regular2}} # green
regular3={{color.terminal.regular3}} # yellow
regular4={{color.terminal.regular4}} # blue
regular5={{color.terminal.regular5}} # magenta
regular6={{color.terminal.regular6}} # cyan
regular7={{color.terminal.regular7}} # white

## Bright colors (color palette 8-15)
bright0={{color.terminal.bright0}} # bright black
bright1={{color.terminal.bright1}} # bright red
bright2={{color.terminal.bright2}} # bright green
bright3={{color.terminal.bright3}} # bright yellow
bright4={{color.terminal.bright4}} # bright blue
bright5={{color.terminal.bright5}} # bright magenta
bright6={{color.terminal.bright6}} # bright cyan
bright7={{color.terminal.bright7}} # bright white

## dimmed colors (see foot.ini(5) man page)
# dim0=<not set>
# ...
# dim7=<not-set>

## The remaining 256-color palette
# 16 = <256-color palette #16>
# ...
# 255 = <256-color palette #255>

## Sixel colors
# sixel0 =  000000
# sixel1 =  3333cc
# sixel2 =  cc2121
# sixel3 =  33cc33
# sixel4 =  cc33cc
# sixel5 =  33cccc
# sixel6 =  cccc33
# sixel7 =  878787
# sixel8 =  424242
# sixel9 =  545499
# sixel10 = 994242
# sixel11 = 549954
# sixel12 = 995499
# sixel13 = 549999
# sixel14 = 999954
# sixel15 = cccccc

## Misc colors
# selection-foreground=<inverse foreground/background>
# selection-background=<inverse foreground/background>
# jump-labels=<regular0> <regular3>          # black-on-yellow
# scrollback-indicator=<regular0> <bright4>  # black-on-bright-blue
# search-box-no-match=<regular0> <regular1>  # black-on-red
# search-box-match=<regular0> <regular3>     # black-on-yellow
urls={{color.text.link.default.foreground}}  # <regular3>
